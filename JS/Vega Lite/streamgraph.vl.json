{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
"autosize":"fit",
    "width":500,
  "height":400,
  "data": {
    "url": "https://raw.githubusercontent.com/kailinwng/FIT3179-Viz-2/main/data/COVID.csv"
  },
  "mark": "area",
  "transform": [
    {"filter": "datum.continent!=''"},
    {"filter": {"timeUnit": "year", "field": "date", "gt": "2019"}}
  ],
  "selection": {"grid": {
      "type": "interval", "bind": "scales"
    }},
  "encoding": {
    "x": {
      "timeUnit": "month",
      "field": "date",
      "title": "Month",
      "axis": {
        "gridDash": {
          "condition": {
            "test": {"field": "date", "timeUnit": "month", "equal": "9"},
            "value": []
          },
          "value": [2, 2]
        }
      }
    },
    "y": {"aggregate": "sum", "field": "total_cases", "title": "Active Cases"},
    "color": {
      "field": "continent",
      "scale": {
        "range": [
          "#fdc086",
              "#beaed4",
              "#fbb4ae",
              "#ffff99",
              "#a6cee3",
              "#386cb0"
        ]
      },
      "title":"Continent",
      "legend":null
    },
  
    "tooltip": [
      {"field": "date", "timeUnit": "month", "title": "Month"},
      {"field": "continent", "title": "Continent"},
      {
        "aggregate": "sum",
        "field": "total_cases",
        "title": "Active Cases in Continent"
      }
    ]
  },
  "config": {}
}
