{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",

  "data": {
    "url": "https://raw.githubusercontent.com/kailinwng/FIT3179-Viz-2/main/data/COVID-%20Temperature%20and%20Humidity.csv"
  },
  "hconcat": [
    {
      "width": 260,
      "height": 460,

      "mark": {"type": "bar"},
      "selection": {
        "country": {"type": "multi", "fields": ["Country"], "bind": "legend"},
        "grid": {
      "type": "interval", "bind": "scales"
    }
      },
      "encoding": {
        "x": {
          "timeUnit": "monthdate",
          "field": "date",
          "title": null,
          "axis": {"grid": false}
          
        },
        "y": {
          "field": "confirmed",
          "aggregate": "sum",
          "axis": {"grid": true},
          "title": "Confirmed Cases"
        },
        "color": {"field": "Country","scale": {
        "range": [
              
              "#beaed4",
              "#fbb4ae",
              
              "#ffff99",
              "#fdc086",
              
              
              "#a6cee3",
              "#fbb4ae",
              "#386cb0"
              
        ]
      }},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "date",
            "timeUnit": "monthdate",
            "type": "ordinal",
            "title": "Date"
          },
          {
            "field": "confirmed",
            "type": "quantitative",
            "title": "Total Confirmed Cases"
          }
        ],
        "opacity": {
          "condition": {"selection": "country", "value": 1},
          "value": 0.1
        }
      },
      "transform": [
        {
          "filter": "datum.Country == 'United States of America' || datum.Country == 'Italy' || datum.Country == 'Spain' || datum.Country == 'Germany' || datum.Country == 'China' || datum.Country == 'France' || datum.Country == 'Iran' || datum.Country == 'United Kingdom' || datum.Country == 'Switzerland' || datum.Country == 'Turkey'"
        }
      ]
    },
    {  "resolve": {
    "legend": {"color": "independent"},
    "scale": {"color": "independent"}
  },
      "vconcat": [
    {
      "title": {
        "text": "Temperature (°C)"
      },
      "width": 260,
      "height": 200,
      "mark": {"type": "rect", "strokeWidth": 2},
      "selection": {
        "country": {
          "type": "interval"
        },
        "grid": {
      "type": "interval", "bind": "scales"
    }
      },
      "encoding": {
        "x": {
          "timeUnit": "monthdate",
          "field": "date",
          "type": "ordinal",
          "title": null
        },
        "y": {
          "field": "Country",
          "axis": {"grid": false},
          "title": null,
          "sort":null
        },
        "color": {
          "field": "temperature",
          "type": "quantitative",
          "scale": {"scheme": "redyellowblue"},
          "title": null,
          "sort":"descending"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "date",
            "timeUnit": "monthdate",
            "type": "ordinal",
            "title": "Date"
          },
          {
            "field": "temperature",
            "type": "quantitative",
            "title": "Temperature (°C)"
          }
        ],
        "opacity": {
          "condition": {"selection": "country", "value": 1},
          "value": 0.2
        }
      },
      "transform": [
        {
          "filter": "datum.Country == 'United States of America' || datum.Country == 'Italy' || datum.Country == 'Spain' || datum.Country == 'Germany' || datum.Country == 'China' || datum.Country == 'France' || datum.Country == 'Iran' || datum.Country == 'United Kingdom' || datum.Country == 'Switzerland' || datum.Country == 'Turkey'"
        }
      ]
    },
    {
      "title": {
        "text": "Humidity (%)"
      },

      "width": 260,
      "height": 200,
      "mark": {"type": "rect"},
      "selection": {
        "country": {
          "type": "interval"
        },
        "grid": {
      "type": "interval", "bind": "scales"
    }
      },
      "encoding": {
        "x": {
          "timeUnit": "monthdate",
          "field": "date",
          "type": "ordinal",
          "title": null
        },
        "y": {"field": "Country", "axis": {"grid": false}, "title": null,"sort":null},
        "color": {
          "field": "humidity",
          "type": "quantitative",
          "scale": {"scheme": "brownbluegreen"},
          "title": null,
          "sort":"ascending"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "date",
            "timeUnit": "monthdate",
            "type": "ordinal",
            "title": "Date"
          },
          {
            "field": "humidity",
            "type": "quantitative",
            "title": "Humidity (%)"
          }
        ],
        "opacity": {
          "condition": {"selection": "country", "value": 1},
          "value": 0.2
        }
      },
      "transform": [
        {
          "filter": "datum.Country == 'United States of America' || datum.Country == 'Italy' || datum.Country == 'Spain' || datum.Country == 'Germany' || datum.Country == 'China' || datum.Country == 'France' || datum.Country == 'Iran' || datum.Country == 'United Kingdom' || datum.Country == 'Switzerland' || datum.Country == 'Turkey'"
        }
      ]
    }
    
  ]
    }
  ]
}
